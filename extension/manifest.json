{
  "manifest_version": 3,
  "name": "Serp AI Score Detector",
  "version": "1.0",
  "description": "Displays AI likelihood score next to Google search results.",
  "permissions": ["activeTab"],
  "host_permissions": [
    "https://*.google.com/*",
	"https://*.google.co.kr/*",
	"https://iker-postcentral-daniela.ngrok-free.dev/*"
  ],
  "background": { "service_worker": "background.js" },
  "content_scripts": [
    {
      "matches": [
        "https://www.google.com/search*",
        "https://www.google.co.kr/search*"
      ],
      "js": ["content.js"],
      "css": ["overlay.css"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

